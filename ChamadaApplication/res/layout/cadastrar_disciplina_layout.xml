<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/disciplina_nome"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/disciplinaNomeEditText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_marginBottom="10sp"
        android:layout_marginTop="10sp"
        android:background="@android:color/darker_gray" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:layout_marginTop="10sp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/data_inicio"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/dataInicioNaoDefinida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/data_nao_definida"
                android:textSize="25sp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:layout_marginTop="10sp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/data_fim"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/dataFimNaoDefinida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/data_nao_definida"
                android:textSize="25sp" />
        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:layout_marginTop="10sp"
        android:text="@string/dias_semana"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <ListView
            android:id="@+id/diasSemanaCheckBoxesList"
            android:layout_width="wrap_content"
            android:layout_height="188dp"
            android:divider="@android:color/transparent"
            android:dividerHeight="10sp" />
    </LinearLayout>

</LinearLayout>